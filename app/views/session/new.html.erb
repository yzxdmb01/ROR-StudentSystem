<link rel="stylesheet" href="../../assets/css/adminlte.min.css">
<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a href="#">学生管理系统</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <% if flash[:login_error] %>
        <p class="login-box-msg"><%= flash[:login_error] %></p>
      <% end %>

      <%= form_for :session, url: :session_create do |f| %>
        <div class="input-group mb-3">
          <input name="session[name]" class="form-control" placeholder="用户名">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" name="session[password]" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      <% end %>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->

<!-- jQuery -->
<script src="../../assets/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../assets/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../assets/dlist/adminlte.min.js"></script>

</body>